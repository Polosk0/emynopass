# Base de donn√©es PostgreSQL
DB_HOST="localhost"
DB_PORT=5432
DB_NAME="emynopass"
DB_USER="emynopass"
DB_PASSWORD="emynopass"
DATABASE_URL="postgresql://emynopass:emynopass@localhost:5432/emynopass"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"
VITE_API_URL="https://emynona.cloud/api"

# Serveur
PORT=3001
NODE_ENV="development"
FRONTEND_URL="https://emynona.cloud"

# Stockage des fichiers
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE="100MB"
ALLOWED_EXTENSIONS=".pdf,.doc,.docx,.txt,.jpg,.jpeg,.png,.gif,.zip,.rar,.mp4,.mp3"

# Email (Nodemailer)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
FROM_EMAIL="noreply@fileshare.com"
FROM_NAME="FileShare"

# Chiffrement
ENCRYPTION_KEY="your-32-character-encryption-key-here"

# Liens de partage
DEFAULT_EXPIRY_HOURS=24
MAX_DOWNLOADS=10

# Redis (optionnel pour le cache)
REDIS_URL="redis://localhost:6379"

